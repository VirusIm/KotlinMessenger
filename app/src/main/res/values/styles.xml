<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTextField">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/on_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppButton.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppButton.Toolbar" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
